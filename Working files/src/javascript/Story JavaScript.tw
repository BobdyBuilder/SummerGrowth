window.isNumeric = function (obj) {
	switch (typeof obj) {
	case "boolean":
		/* FALL-THROUGH */
	case "object":
		return false;
	case "string":
		obj = Number(obj);
		break;
	}
	return isFinite(obj) && !isNaN(obj);
};


